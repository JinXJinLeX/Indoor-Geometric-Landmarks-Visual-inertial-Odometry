<?xml version="1.0" encoding="utf-8"?>
<launch>
    <arg name="config_path" default = "$(find feature_tracker)/../config/euroc/room_1280.yaml" />
	  <arg name="vins_path" default = "$(find feature_tracker)/../config/../" />

    <!-- <arg name="camera_info_url"  default="file:///home/.ros/camera_info/head_camera.yaml"/> -->
    <arg name="image_width"      default="1280"/>
    <arg name="image_height"     default="720"/>
    <arg name="markerId"        default="26"/>
    <arg name="markerSize"      default="0.133"/>    <!-- in m -->
    <arg name="eye"             default="left"/>
    <arg name="marker_frame"    default="aruco_marker_frame"/>
    <!-- <arg name="marker_frame"    default="aruco_marker_frame"/> -->
    <arg name="ref_frame"       default=""/>  <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="corner_refinement" default="LINES" /> <!-- NONE, HARRIS, LINES, SUBPIX -->

    <node name="feature_tracker" pkg="feature_tracker" type="feature_tracker" output="log">
        <param name="config_file" type="string" value="$(arg config_path)" />
        <param name="vins_folder" type="string" value="$(arg vins_path)" />
    </node>
    <node name="vins_estimator" pkg="vins_estimator" type="vins_estimator" output="screen">
       <param name="config_file" type="string" value="$(arg config_path)" />
       <param name="vins_folder" type="string" value="$(arg vins_path)" />
    </node>

    <node name="pose_graph" pkg="pose_graph" type="pose_graph" output="screen">
        <param name="config_file" type="string" value="$(arg config_path)" />
        <param name="visualization_shift_x" type="int" value="0" />
        <param name="visualization_shift_y" type="int" value="0" />
        <param name="skip_cnt" type="int" value="0" />
        <param name="skip_dis" type="double" value="0" />
    </node>
    <!-- <node 
      pkg="mvs_ros_pkg"
      type="grabImg"
      name="mvs_camera"
      args="$(find mvs_ros_pkg)/config/left_camera.yaml"
      respawn="true"
      output="screen"
    /> -->

